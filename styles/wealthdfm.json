{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Wealth DFM",
	"description":  "Colour scheme and fonts for Wealth DFM",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#000000", "#ffffff" ],
					"name": "Black and White",
					"slug": "black-and-white"
				},
				{
					"colors": [ "#666666", "#ffffff" ],
					"name": "Primary and White",
					"slug": "primary-and-white"
				},
				{
					"colors": [ "#3d3d3d", "#ffffff" ],
					"name": "Dark and White",
					"slug": "dark-and-white"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#198ace",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#4e5665",
					"name": "Dark",
					"slug": "dark"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--serif)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontWeight": "var(--wp--custom--font-weight--light)",
			"lineHeight": "var(--wp--custom--line-height--body)"
		},
		"blocks": {
			"core/post-terms": {
				"typography": {
					"textTransform": "none"
				}
			}
		}
	}
}